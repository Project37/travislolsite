---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';
import ExpertiseCard from '../components/ExpertiseCard.astro';
import ProjectCard from '../components/ProjectCard.astro';
import ContactInfo from '../components/ContactInfo.astro';
import ASCIIBrackets from '../components/ASCIIBrackets.astro';
import siteConfig from '../config/site.js';
import expertiseAreas from '../config/expertise.js';
import projects from '../config/projects.js';

const { author } = siteConfig;
---

<Layout>
  <!-- Hero section with professional introduction -->
  <section class="hero">
    <div class="hero-container">
      <h1>Securing Your Digital Future</h1>
      <p>
        Senior IT Security Professional with extensive experience in enterprise security architecture, threat mitigation, and security compliance.
      </p>
      <div style="display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap;">
        <Button href="/#contact" variant="primary">Contact Me</Button>
        <Button href="/blog/" variant="outline">Read My Blog</Button>
      </div>
    </div>
  </section>

  <main>
    <!-- About section -->
    <section id="about" class="section" style="display: grid; grid-template-columns: 2fr 1fr; gap: 2rem; align-items: center;">
      <div>
        <h2 class="section-title">About Me</h2>
        <p>With over {author.yearsOfExperience} years of experience in IT security, I specialize in designing and implementing robust security solutions for enterprises. My expertise spans across network security, identity and access management, security compliance frameworks, and incident response.</p>
        <p>I am passionate about staying ahead of emerging threats and utilizing cutting-edge technologies to protect organizational assets. I believe in a proactive approach to security, focusing on threat prevention while maintaining operational efficiency.</p>
        <p>Currently serving as a Senior IT Security Administrator at {author.company}, I oversee security operations and lead initiatives to enhance the organization's security posture.</p>
      </div>
      <div style="text-align: center;">
        <!-- Replace with a professional headshot or security-themed image -->
        <div style="width: 250px; height: 250px; background: var(--base02); border-radius: 0.5rem; margin: 0 auto; display: flex; align-items: center; justify-content: center; color: var(--accent); font-weight: bold;">
          [Your Professional Photo]
        </div>
      </div>
    </section>

    <!-- Expertise section -->
    <section id="expertise" class="section">
      <h2 class="section-title">Areas of Expertise</h2>
      
      <div class="expertise-grid">
        {expertiseAreas.map(area => (
          <ExpertiseCard 
            title={area.title} 
            description={area.description} 
            color={area.color}
            icon={area.icon}
          />
        ))}
      </div>
    </section>

    <!-- Projects/Case Studies Section -->
    <section id="projects" class="section">
      <h2 class="section-title">Selected Projects</h2>
      
      <div class="project-grid">
        {projects.map(project => (
          <ProjectCard 
            title={project.title}
            company={project.company}
            duration={project.duration}
            challenge={project.challenge}
            solution={project.solution}
            result={project.result}
            accentColor={project.accentColor}
          />
        ))}
      </div>
    </section>

    <!-- ASCII Bracket Demo Section -->
    <section id="approach" class="section">
      <h2 class="section-title">My Approach</h2>
      
      <div>
        <ASCIIBrackets type="square" size="medium" color="violet">
          <div style="text-align: center; padding: 1rem 2rem;">
            <h3 style="color: var(--violet); margin-bottom: 1rem;">Security-First Methodology</h3>
            <p>My security approach integrates advanced technology with strategic planning to create multi-layered defense mechanisms that adapt to evolving threats while maintaining business continuity.</p>
          </div>
        </ASCIIBrackets>

        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 2rem; margin-top: 2rem;">
          <ASCIIBrackets type="curly" size="small" color="blue">
            <div style="text-align: center; padding: 1rem;">
              <h4 style="color: var(--blue); margin-bottom: 0.5rem;">Prevention</h4>
              <p>Proactive security measures to prevent breaches before they occur.</p>
            </div>
          </ASCIIBrackets>
          
          <ASCIIBrackets type="angle" size="small" color="red">
            <div style="text-align: center; padding: 1rem;">
              <h4 style="color: var(--red); margin-bottom: 0.5rem;">Response</h4>
              <p>Rapid incident response protocols to minimize impact when threats are detected.</p>
            </div>
          </ASCIIBrackets>
        </div>
      </div>
    </section>
    
    <!-- Contact Section -->
    <section id="contact" class="section" style="margin-bottom: 3rem;">
      <ContactInfo>
        <!-- You can add a contact form or other content in this slot if needed -->
      </ContactInfo>
    </section>
  </main>
</Layout>
