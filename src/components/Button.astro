---
/**
 * Button Component
 * 
 * A reusable button component that provides consistent styling across the site.
 * Can be rendered as either a link (<a>) or button (<button>) element depending
 * on the presence of href prop.
 * 
 * @component
 * @example
 * <Button href="/contact" variant="primary">Contact Me</Button>
 * <Button variant="outline" onClick="myFunction()">Submit</Button>
 */
interface Props {
  /** URL to navigate to (if omitted, renders as a <button>) */
  href?: string;
  /** Visual style of the button */
  variant: 'primary' | 'outline' | 'accent';
  /** Button type attribute (for <button> elements) */
  type?: 'button' | 'submit' | 'reset';
  /** Additional CSS classes to apply */
  class?: string;
  /** Optional aria-label for accessibility */
  ariaLabel?: string;
}

const { 
  href, 
  variant = 'primary',
  type = 'button',
  class: className = '',
  ariaLabel
} = Astro.props;
---

{href ? (
  <a 
    href={href} 
    class={`btn btn-${variant} ${className}`}
    aria-label={ariaLabel}
  >
    <slot />
  </a>
) : (
  <button 
    type={type} 
    class={`btn btn-${variant} ${className}`}
    aria-label={ariaLabel}
  >
    <slot />
  </button>
)}

<!-- 
  Button styling is defined in src/styles/components.css
  Uses CSS variables for consistent theming across variants
-->
