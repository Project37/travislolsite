---
/**
 * CautionBanner Component
 * 
 * A portable, self-contained caution banner component that can be 
 * easily moved between projects. Displays at the very top of the page
 * and covers any existing header.
 * 
 * @component
 */

import { Icon } from 'astro-iconify';

// Define props for customization
interface Props {
  message?: string;
  opacity?: number;
}

const { 
  message = "SITE UNDER CONSTRUCTION", 
  opacity = 0.95 // Default opacity
} = Astro.props;
---

<div class="caution-banner" style={`opacity: ${opacity};`}>
  <div class="caution-content">
    <Icon name="tabler:alert-triangle" class="caution-icon" />
    <span class="caution-text">{message}</span>
    <Icon name="tabler:alert-triangle" class="caution-icon" />
  </div>
</div>

<style>
  .caution-banner {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    background-color: #f8d7da;
    color: #721c24;
    border-bottom: 3px solid #f5c6cb;
    padding: 0.75rem 1rem;
    font-weight: bold;
    text-align: center;
    z-index: 10000; /* Super high z-index to ensure it's on top of everything */
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
  }

  .caution-content {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.5rem;
  }

  .caution-icon {
    width: 24px;
    height: 24px;
  }

  .caution-text {
    font-size: 1rem;
    letter-spacing: 1px;
  }

  /* Animation for the banner */
  @keyframes pulse {
    0% { opacity: 1; }
    50% { opacity: 0.8; }
    100% { opacity: 1; }
  }

  .caution-banner {
    animation: pulse 2s infinite;
  }
</style>
