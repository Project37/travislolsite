---
let count = 0;
---
<div style="text-align: center; margin: 2rem 0;">
  <button id="astro-counter" style="padding: 0.5rem 1.5rem; font-size: 1.1rem; border-radius: 1.5rem; border: 1px solid var(--accent); background: var(--base2); color: var(--accent); cursor: pointer;">
    Clicked <span id="astro-counter-value">0</span> times
  </button>
</div>
<script type="text/javascript">
  const btn = document.getElementById('astro-counter');
  const val = document.getElementById('astro-counter-value');
  let count = 0;
  btn.addEventListener('click', () => {
    count++;
    val.textContent = count;
  });
</script>
