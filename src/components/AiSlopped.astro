---
/*
* AiSlopped.astro - Component for rendering the "AI Slopped" blog post
* This component is used to display a blog post with a specific tag and color.
*
* @component
*/
interface Props {
  tag: string; // The tag to be displayed
}



// BlogTag.astro - Component for rendering blog tags with customizable colors
const { tag } = Astro.props;

// Define custom colors for specific tags
const tagColors = {
    "ai_slopped": "red",
    "testing": "blue",
//   "security": "red",
//   "automation": "green",
//   "playwright": "emerald",
//   "vitest": "amber",

  // Add more tag-color pairs as needed
};
// Get color for this tag or use default
const tagColor = tagColors[tag];;
---

<span class={`tag tag-${tagColor}`}>
  {tag}
</span>

<style>
  .tag {
    display: inline-block;
    padding: 0.4rem 1rem;
    border-radius: 2rem;
    font-size: 0.9rem;
    margin: 0.25rem;
    font-weight: 500;
  }
  /* Color variants */
  .tag-blue {
    background-color: rgba(59, 130, 246, 0.1);
    color: #3b82f6;
  }
  
  .tag-red {
    background-color: rgba(239, 68, 68, 0.1);
    color: #ef4444;
  }
  
  .tag-green {
    background-color: rgba(34, 197, 94, 0.1);
    color: #22c55e;
  }
  
  .tag-amber {
    background-color: rgba(245, 158, 11, 0.1);
    color: #f59e0b;
  }
  
  .tag-emerald {
    background-color: rgba(16, 185, 129, 0.1);
    color: #10b981;
  }
  
  .tag-purple {
    background-color: rgba(168, 85, 247, 0.1);
    color: #a855f7;
  }
  
  .tag-gray {
    background-color: rgba(107, 114, 128, 0.1);
    color: #6b7280;
  }
  
  .tag-default {
    background: rgba(255,255,255,0.1);
    color: var(--base2);
  }
</style>