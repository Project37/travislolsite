---
/**
 * ExpertiseCard Component
 * 
 * Displays a security expertise or service area with a title, description,
 * and customizable accent color. Used on the homepage to showcase key
 * professional security capabilities.
 *
 * @component
 */
import { Icon } from 'astro-icon/components';

interface Props {
  /** The title of the expertise area */
  title: string;
  /** A brief description of the expertise or service */
  description: string;
  /** The accent color for the card (corresponds to CSS classes) */
  color: string;
  /** 
   * Icon identifier in format "pack:icon-name" 
   * Example: "mdi:shield-lock", "carbon:security-services", etc.
   */
  icon?: string;
}

const { title, description, color, icon } = Astro.props;
---

<div class={`expertise-card ${color}`}>
  {icon && (
    <div class="icon-container">
      <Icon name={icon} width="36" height="36" />
    </div>
  )}
  <h3>{title}</h3>
  <p>{description}</p>
</div>

<!-- 
  Styling is maintained in src/styles/components.css
  The card uses CSS variables for theming and consistent styling
-->
