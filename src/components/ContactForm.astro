---
// Contact form component
interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "Security Consultation", 
  description = "Interested in a security assessment or consultation? Provide your details below, and I'll get back to you promptly."
} = Astro.props;
---

<div class="contact-form">
  <h3>{title}</h3>
  <p>{description}</p>
  
  <div class="form-group">
    <label for="name" class="form-label">Name</label>
    <input type="text" id="name" placeholder="Your Name" class="form-control" />
  </div>
  
  <div class="form-group">
    <label for="email" class="form-label">Email</label>
    <input type="email" id="email" placeholder="Your Email" class="form-control" />
  </div>
  
  <div class="form-group">
    <label for="message" class="form-label">Message</label>
    <textarea id="message" placeholder="How can I help you?" rows="4" class="form-control"></textarea>
  </div>
  
  <button type="submit" class="form-button">Send Message</button>
</div>

<style>
  .contact-form {
    background: rgba(7,54,66,0.07);
    padding: 2rem;
    border-radius: 0.5rem;
  }
  
  .contact-form h3 {
    color: var(--accent);
    margin-top: 0;
  }
  
  .contact-form p {
    margin-bottom: 1.5rem;
  }
</style>
