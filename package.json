{
  "name": "main_site",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "postbuild": "cp public/.nojekyll dist/.nojekyll",
    "preview": "astro preview",
    "astro": "astro",
    "format": "prettier --write .",
    "lint": "eslint --ext .js,.ts,.astro src",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test && npm run test:e2e",
    "deploy": "npm run test && npm run build && gh-pages -d dist --dotfiles"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/node": "^9.2.1",
    "@typescript-eslint/parser": "^8.32.1",
    "astro": "^5.7.12",
    "astro-iconify": "^1.2.0",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.1",
    "@playwright/test": "^1.52.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "eslint": "^8.57.1",
    "eslint-plugin-astro": "^0.31.4",
    "gh-pages": "^6.3.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.5.3",
    "prettier-plugin-astro": "^0.12.3",
    "vitest": "^3.1.3"
  }
}
