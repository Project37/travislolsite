{
  "extends": [
    "eslint:recommended",
    "plugin:astro/recommended"
  ],
  "overrides": [
    {
      "files": ["*.astro"],
      "parser": "astro-eslint-parser",
      "parserOptions": {
        "parser": "@typescript-eslint/parser",
        "extraFileExtensions": [".astro"]
      }
    },
    {
      "files": ["*.js", "*.mjs", "*.cjs", "*.ts"],
      "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": "latest"
      }
    }
  ]
}
